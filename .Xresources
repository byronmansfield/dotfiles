! General urxvt preferences
urxvt*loginShell:true
urxvt*transparent:true
urxvt*shading:30
urxvt*background:Black
urxvt*foreground:White
urxvt*scrollBar:false
urxvt*scrollBar_right:true
urxvt*transpscrollbar:true
urxvt*saveLines:32767
urxvt*urgentOnBell: True
urxvt*visualBell: False
urxvt*skipScroll: True
URxvt*buffered: True

! For better copy and paste
URxvt.keysym.Shift-Control-V: perl:clipboard:paste
URxvt.perl-ext-common: default,clipboard
URxvt.iso14755: False
URxvt.clipboard.copycmd:  xsel -ib
URxvt.clipboard.pastecmd: xsel -ob

! For highlight colors
URxvt*highlightColor:       #999999
URxvt*highlightTextColor:   #FFFFFF

! Fonts

! Hack Fonts
! Do not seem to be pactched for powerline unicode
! urxvt*font: xft:Hack-Regular:pixelsize=13:antialias=true
! urxvt*imFont: xft:Hack-Regular:pixelsize=15:antialias=true
! urxvt*boldFont: xft:Hack-Bold:pixelsize=15:antialias=true
! urxvt*italicFont: xft:Hack-Italic:pixelsize=13:antialias=true
! urxvt*BoldItalicFont: xft:Hack-BoldItalic:pixelsize=15:antialias=true

! Menlo for Powerline Fonts
! patched for powerline unicode, still looks thin
URxvt*font: xft:Menlo for Powerline:pixelsize=13
URxvt*imFont: xft:Menlo for Powerline:pixelsize=13
URxvt*boldFont: xft:Menlo Bold for Powerline:pixelsize=13
URxvt*italicFont: xft:Menlo Italic for Powerline:pixelsize=13
URxvt*BoldItalicFont: xft:Menlo Bold Italic for Powerline:pixelsize=13

! DejaVu Mono Fonts
! URxvt*font: xft:DejaVu Sans Mono Bold for Powerline:pixelsize=13
! URxvt*imFont: xft:DejaVu Sans Mono Bold for Powerline:pixelsize=15
! URxvt*boldFont: xft:DejaVu Sans Mono Bold for Powerline:pixelsize=15
! URxvt*italicFont: xft:DejaVu Sans Mono Oblique for Powerline:pixelsize=13
! URxvt*BoldItalicFont: xft:DejaVu Sans Mono Bold Oblique for Powerline:pixelsize=15

! :Bind C-0, C-+ and C-= to activate small, medium, and big font size
URxvt.keysym.C-0: command:\033]710;xft:DejaVu Sans Mono for Powerline:pixelsize=12\007
URxvt.keysym.C-minus: command:\033]710;xft:DejaVu Sans Mono for Powerline:pixelsize=20\007
URxvt.keysym.C-equal: command:\033]710;xft:DejaVu Sans Mono for Powerline:pixelsize=50\007

! Bind Home/End Key
URxvt*keysym.Home: \033[1~
URxvt*keysym.End: \033[4~

! Make URLS Clickable
urxvt.perl-ext: default,matcher
urxvt.urlLauncher: google-chrome
urxvt.keysym.C-Delete: perl:matcher
urxvt.underlineURLs: true

Xft.antialias:           rgba
Xft.hinting:             true
Xft.hintstyle:           hintfull

